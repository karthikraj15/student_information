<% layout('layouts/main')%>

<div class="col-3">
    <a onclick="history.back()" type="button" class="btn text-white align-self-center"
        style="background-color: #563d7c ">
        <i class="bi bi-backspace-fill"></i> Go Back!</a>
</div>
<br>

<h1><%= studName %></h1><br>

<h2>courses</h2>
<table class="table table-bordered">
    <% for (let c of courses){%>
    <tr>
        <td><%=c.name%></td>
        <td>
        <%if(!c.status){%>
            <form action="/enrolls/<%=enrollId%>/<%=c._id%>?_method=PUT" method="POST" class="row g-3 needs-validation">
                <button class="btn btn-success" type="submit">Approve</button>
            </form>
        <%}else{%>
            <h4>Approved</h4>   
        <%}%>  
    </td>  
    </tr>
    <%}%>
</table>
