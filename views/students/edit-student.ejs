<% layout('layouts/main')%>


<form action="/students/<%=s._id%>?_method=PUT" method="POST" class="row g-3 needs-validation">

    <div class="col-3">
        <a onclick="history.back()" type="button" class="btn text-white align-self-center"
            style="background-color: #563d7c ">
            <i class="bi bi-backspace-fill"></i> Go Back!</a>
    </div>
    <br>
    <h3 class=" text-success text-decoration-underline">Edit student:</h3>
    
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[name]" value="<%=s.name%>" required>
            <label for="floatingInput" class="form-label">Name</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com"  name="student[usn]" value="<%= s.usn%>" readonly>
            <label for="floatingInput" class="form-label">USN</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[sem]" value="<%= s.sem%>" required>
            <label for="floatingInput" class="form-label">Sem</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="date" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[dob]" value="<%= s.dob%>" required>
            <label for="floatingInput" class="form-label">DOB</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[email]"  value="<%= s.email%>" readonly>
            <label for="floatingInput" class="form-label">Email</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[phone]" value="<%= s.phone%>" required>
            <label for="floatingInput" class="form-label">Phone</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[college]" value="<%= s.college%>" required>
            <label for="floatingInput" class="form-label">college</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" 
            placeholder="email@email.com" name="student[address]" value="<%= s.address%>" required>
            <label for="floatingInput" class="form-label">Address</label>
        </div>
    </div>
    
    <div class="col-4 d-grid">
        <button class="btn btn-success" type="submit">Update</button>
    </div>
</form>