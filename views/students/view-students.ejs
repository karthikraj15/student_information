<% layout('layouts/main')%>
<div class="row">
  <div class="col-6">
      <h1 class=" text-success text-decoration-underline">Students</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
      <a href="/students/new" type="button" class="btn btn-success align-self-center">+ Add student</a>
  </div>
</div>
<table class="table table-bordered">
  <thead class=""thead-dark>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">USN</th>
      <th scope="col">Sem</th>
      <th scope="col">DOB</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">college</th>
      <th scope="col">address</th>

      <th class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for (let s of stud){ %>
    <tr>
            <td><%= s.name %></td>
            <td><%= s.usn %></td>
            <td><%= s.sem %></td>
            <td><%= s.dob %></td>
            <td><%= s.email %></td>
            <td><%= s.phone %></td>
            <td><%= s.college %></td>
            <td><%= s.address %></td>
      
       <td class="">
                <a href="/students/<%= s._id %>" type="button" class="btn btn-danger btn-small"><i
                        class="bi bi-eye"></i>
                    View</a>
                <a href="/students/<%= s._id %>/edit" type="button" class="btn btn-warning btn-small"><i
                        class="bi bi-pencil"></i>Edit
                </a>
                <form action="/students/<%= s._id %>?_method=DELETE" method="POST"><button class="btn btn-sm btn-secondary my-2">
                  <i class="bi bi-person-x"></i>Delete</button>
              </form>
        </td>
    </tr>
   <% } %>
    
  </tbody>
</table>